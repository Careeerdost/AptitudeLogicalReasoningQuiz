<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_two_trans"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activities.splash_screen"
    tools:ignore="Overdraw">

    <TextView
        android:id="@+id/welcomeDost"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="@string/welcome_dost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardBackgroundColor="@color/transWhite"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp">

        <ImageView
            android:id="@+id/aptitude_logo"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:src="@drawable/aptitude_logo" />

    </android.support.v7.widget.CardView>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:theme="@style/AptitudeTheme.WhiteAccent" />
</LinearLayout>